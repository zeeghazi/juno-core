{
  "name": "@junobuild/core",
  "version": "1.0.0",
  "description": "JavaScript core client for Juno",
  "author": "zeeghazi",
  "type": "module",
  "main": "./dist/node/index.mjs",
  "module": "./dist/browser/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "declarations"
  ],
  "scripts": {
    "ts-declaration": "tsc --emitDeclarationOnly --outDir dist/types",
    "build": "mkdir -p dist && cp -R declarations dist && node esbuild.mjs && npm run ts-declaration",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeeghazi/juno-core.git"
  },
  "bugs": {
    "url": "https://github.com/zeeghazi/juno-core"
  },
  "keywords": [
    "blockchain-as-a-service",
    "baas",
    "dapps",
    "dapps-development",
    "internet computer",
    "smart-contracts",
    "web3"
  ],
  "homepage": "https://juno.build",
  "dependencies": {
    "@dfinity/agent": "^1.2.0",
    "@dfinity/auth-client": "^1.2.0",
    "@dfinity/identity": "^1.2.0",
    "@dfinity/principal": "^1.2.0",
    "@junobuild/utils": "*"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "node-fetch": "^3.3.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tsdoc-markdown": "^0.4.0",
    "typescript": "^5.4.3"
  }
}
